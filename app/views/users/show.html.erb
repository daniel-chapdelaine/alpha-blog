<h1><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>
<% if logged_in? && (@user == current_user || current_user.admin? )%> 
  <div> <%= link_to 'Edit Profile', edit_user_path(@user) %> </div> 
  <div> <%= link_to 'Delete Profile', user_path(@user), method: :delete, data: {confirm: "Are you sure?"} %> </div>
<% end %>

<h3>    
  <% @user.articles.each do |article|%>     
      <div> <%= article.title %> </div>
      <div> <%= article.description %> </div>
      <div> <%= link_to 'Show', article_path(article) %> </div>
      <% if logged_in? && @user == current_user %> 
        <div> <%= link_to 'Edit', edit_article_path(article) %> </div>
        <div> <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %> </div>
      <% end %>
      <div>----------------------------------------- </div>
  <% end %> 
</h3>